<Window x:Class="SynthBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:myCtrls="clr-namespace:SynthBasics"
        Title="MainWindow" Height="600" Width="600" Background="#FF282828">
    <StackPanel>
        <myCtrls:Potentiometer x:Name="myPot" Height="400" Width="400" CurrentSetting="50.0">
            <myCtrls:Potentiometer.Triggers>
                <EventTrigger RoutedEvent="myCtrls:Potentiometer.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard TargetProperty="CurrentSetting">
                                <DoubleAnimation From="50" To="60" Duration="0:0:5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </myCtrls:Potentiometer.Triggers>
        </myCtrls:Potentiometer>
    </StackPanel>
</Window>
