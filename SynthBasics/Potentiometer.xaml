<UserControl x:Class="SynthBasics.Potentiometer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label x:Name="numberDisplay" Height="50" Width="200" Background="LightBlue" Margin="50,121,50,129" />
        <Canvas Height="29" HorizontalAlignment="Left" Margin="42,64,0,0" x:Name="sliderbkgnd" VerticalAlignment="Top" Width="219">
            <Ellipse Height="18" x:Name="thumb" Stroke="{x:Null}" Width="18" Canvas.Left="43" Canvas.Top="5">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="White" Offset="0.713" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Rectangle Canvas.Left="0" Canvas.Top="0" Height="29" Name="rectangle1" Stroke="Black" Width="219" />
        </Canvas>
    </Grid>
</UserControl>
